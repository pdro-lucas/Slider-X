<div class="container">
  <div class="row">
    <% results.forEach(function(result, i) { %>
      <div class="col-xl-3 col-lg-6 col-md-6 mb-4">
        <div class="card shadow-sm scale-animation overflow-hidden" style="height: 300px;">
          <div class="overflow-hidden" style="height: 200px;">
            <img class="card-img-top" src="<%= result.image_location %>" alt="<%= result.title %>">
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <a href="/admin/image/<%= result.id %>" class="text-dark">
                <%= result.title %>
              </a>
            </h5>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
