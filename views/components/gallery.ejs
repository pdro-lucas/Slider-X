<div class="container">
  <div class="row text-center text-lg-start">
    <% results.forEach(function(result) { %>
      <div class="col-6 col-md-4 col-lg-3">
        <a href="/api/image/<%= result.id %>" class="d-block mb-4 h-100">
          <img class="img-fluid img-thumbnail" src="<%= result.image_location %>" alt="<%= result.title %>">
        </a>
      </div>
    <% }); %>
  </div>
</div>